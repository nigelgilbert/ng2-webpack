{
  "name": "ng2-webpack",
  "version": "0.0.1",
  "description": "ES2015 with Webpack and Decorators",
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true
    }
  },
  "scripts": {
    "build": "webpack -p --progress",
    "watch": "webpack-dev-server --content-base client/ --inline --hot"
  },
  "dependencies": {
    "angular2": "2.0.0-beta.6",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.0",
    "zone.js": "0.5.14"
  },
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.3.13",
    "concurrently": "^2.0.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.0.0",
    "file-loader": "^0.8.5",
    "json-loader": "^0.5.3",
    "nodemon": "^1.8.1",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.12.1"
  }
}
